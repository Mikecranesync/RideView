# RideView Environment Variables
# Copy this file to .env and customize as needed

# Environment mode: development, production
RIDEVIEW_ENV=development

# Camera settings
RIDEVIEW_CAMERA_SOURCE=0
RIDEVIEW_CAMERA_WIDTH=1280
RIDEVIEW_CAMERA_HEIGHT=720

# Web server settings
RIDEVIEW_WEB_HOST=0.0.0.0
RIDEVIEW_WEB_PORT=5000

# Logging level: DEBUG, INFO, WARNING, ERROR
RIDEVIEW_LOGGING_LEVEL=INFO
